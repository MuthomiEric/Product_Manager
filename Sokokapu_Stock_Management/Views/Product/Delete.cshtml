@model Sokokapu_Stock_Management.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgpath = "/images/" + Model.ImageUrl;
}



<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="details-div">
        <input type="hidden" asp-for="ImageUrl" />
        <div>
            <img src="@imgpath" alt="Product Image" />
        </div>
        <div>
            <div class="bold">@Html.DisplayFor(model => model.ProductName)</div>

            <div>Size @Html.DisplayFor(model => model.Size)</div>
            <div class="bold">Ksh @Html.DisplayFor(model => model.Price)</div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
